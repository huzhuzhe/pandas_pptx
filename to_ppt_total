    mytime=pd.to_datetime(p.ftime_e,format='%Y%m%d')
    # 将给出的截至时间减去28天，得到最近一个月的时间
    mytime=mytime+datetime.timedelta(days=-28)
    #  比如，从20171201得到201712，并变成文本
    mytime=mytime.strftime('%Y%m')
